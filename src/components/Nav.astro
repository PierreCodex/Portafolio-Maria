<nav
  class="w-full bg-transparent border-b border-[#F2F0EB]/60 py-3 px-6 flex items-center justify-between fixed top-0 left-0 z-50 transition-all backdrop-blur-xl supports-[backdrop-filter]:backdrop-blur-xl"
  style="backdrop-filter: blur(18px); background-color: rgba(255,255,255,0.05);"
>
  <!-- Logo -->
  <div class="flex items-center">
    <img
      src="/Logo2.png"
      alt="Casco de ingeniera"
      width="48"
      height="48"
    />
  </div>
  <!-- Hamburger (mobile) -->
  <button
    id="navToggle"
    class="md:hidden ml-auto p-2 rounded focus:outline-none focus-visible:ring focus-visible:ring-blue-500 hover:bg-black/5 transition"
    aria-label="Abrir menú"
    aria-expanded="false"
  >
    <svg
      id="navIcon"
      class="w-7 h-7"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M3 6h18M3 12h18M3 18h18"></path>
    </svg>
  </button>
  <!-- Menu centrado (desktop) -->
  <div id="desktopMenu" class="hidden md:flex flex-1 justify-center">
    <ul
      class="flex items-center space-x-8 text-[17px] font-medium text-black/90"
    >
      <li><a href="#inicio" class="nav-link">Inicio</a></li>
      <li><span class="text-[#E5E3DE]">/</span></li>
      <li><a href="#sobre-mi" class="nav-link">Sobre mí</a></li>
      <li><span class="text-[#E5E3DE]">/</span></li>
      <li><a href="#portafolio" class="nav-link">Portafolio</a></li>
      <li><span class="text-[#E5E3DE]">/</span></li>
      <li><a href="#contacto" class="nav-link">Contacto</a></li>
      <li><span class="text-[#E5E3DE]">/</span></li>
      <li>
        <a
          href="#"
          class="ml-4 px-4 py-2 text-white font-bold rounded-lg shadow text-sm flex items-center gap-1 transition-all"
          style="background: var(--first-color-light);"
          >Descargar CV <span class="text-base">↓</span></a
        >
      </li>
    </ul>
  </div>
  <!-- Mobile menu overlay -->
  <div
    id="mobileMenu"
    class="fixed inset-0 z-50 flex flex-col items-center justify-center min-h-screen w-full px-6 transition-all duration-300 ease-out opacity-0 pointer-events-none md:hidden backdrop-blur-xl supports-[backdrop-filter]:backdrop-blur-xl"
    style="background: rgb(220,255,241); border: 1.5px solid rgba(16,185,129,0.13); box-shadow: 0 4px 32px 0 rgba(16,185,129,0.10);"
  >
    <button
      id="mobileClose"
      class="absolute top-6 right-6 p-2 rounded focus:outline-none focus-visible:ring focus-visible:ring-blue-500 hover:bg-white/10 transition"
      aria-label="Cerrar menú"
      tabindex="1"
    >
      <svg
        class="w-7 h-7 text-white"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"><path d="M6 6l12 12M6 18L18 6"></path></svg
      >
    </button>
    <div class="w-full flex flex-col items-center justify-center animate-fade-in" style="min-height: 120px;">
      <p
        class="text-xs tracking-[.2em] uppercase mb-2"
        style="color: var(--text-color-light, #6b7280);"
      >
        Menu
      </p>
      <div class="flex items-center justify-center w-full" style="min-height:56px;">
        <img
          src="/Logo2.png"
          alt="Casco de ingeniera"
          width="48"
          height="48"
          style="display:block;margin:auto;"
        />
      </div>
    </div>
    <ul
      class="flex flex-col items-center gap-6 w-full mx-auto max-w-xs text-center mt-4"
      id="mobileMenuLinks"
    >
      <li><a href="#inicio" class="nav-link-mobile">Inicio</a></li>
      <li><a href="#sobre-mi" class="nav-link-mobile">Sobre mí</a></li>
      <li><a href="#portafolio" class="nav-link-mobile">Portafolio</a></li>
      <li><a href="#contacto" class="nav-link-mobile">Contacto</a></li>
    </ul>
    <div class="mt-10 flex justify-center w-full">
      <a
        href="#"
        class="cv-btn-mobile inline-flex items-center justify-center gap-2 px-6 py-3 rounded-lg text-base font-semibold tracking-wide shadow-lg transition"
        style="background: var(--first-color, #10b981); color: var(--button-text-color, #fff);"
      >
        Descargar CV <span
          aria-hidden="true"
          style="color: var(--first-color, #10b981);">↓</span
        >
      </a>
    </div>
  </div>
</nav>
<script>
  // @ts-nocheck
  const navToggle = document.getElementById("navToggle");
  const mobileMenu = document.getElementById("mobileMenu");
  const mobileClose = document.getElementById("mobileClose");
  function openMobileMenu() {
    mobileMenu.classList.remove("opacity-0", "pointer-events-none");
    mobileMenu.classList.add("flex");
    document.body.style.overflow = "hidden";
    navToggle.setAttribute("aria-expanded", "true");
  }
  const mobileMenuLinks = document.getElementById("mobileMenuLinks");
  if (mobileMenuLinks) {
    mobileMenuLinks.addEventListener("click", function (e) {
      const target = e.target;
      if (target.tagName === "A" && target.hash) {
        closeMobileMenu();
        // Let the browser handle the anchor navigation
      }
    });
  }
  function closeMobileMenu() {
    mobileMenu.classList.add("opacity-0", "pointer-events-none");
    setTimeout(() => mobileMenu.classList.remove("flex"), 300);
    document.body.style.overflow = "";
    navToggle.setAttribute("aria-expanded", "false");
  }
  if (navToggle && mobileMenu && mobileClose) {
    navToggle.addEventListener("click", () => {
      const expanded = navToggle.getAttribute("aria-expanded") === "true";
      if (expanded) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    });
    mobileClose.addEventListener("click", closeMobileMenu);
  }
</script>
<style>
  @media (max-width: 767px) {
    #desktopMenu {
      display: none !important;
    }
    #mobileMenu {
      display: flex !important;
    }
  }
  .nav-link {
    position: relative;
    transition: color 0.3s;
    overflow: hidden;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--first-color-light, #48e191) 0%,
      var(--first-color, #10b981) 100%
    );
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.35s cubic-bezier(0.4, 1.6, 0.6, 1);
    transform-origin: left;
  }
  .nav-link:hover,
  .nav-link:focus {
    color: #fff;
  }
  .nav-link:hover::after,
  .nav-link:focus::after {
    transform: scaleX(1);
  }
  .nav-link-mobile {
    display: block;
    color: var(--title-color, #222) !important;
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 0.01em;
    padding: 0.5rem 0;
    border-radius: 0.375rem;
    transition:
      color 0.2s,
      background 0.2s;
    position: relative;
    opacity: 1 !important;
    text-shadow: none !important;
    overflow: hidden;
  }
  .nav-link-mobile::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2.5px;
    background: linear-gradient(
      90deg,
      var(--first-color, #10b981) 0%,
      var(--first-color-light, #48e191) 100%
    );
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.35s cubic-bezier(0.4, 1.6, 0.6, 1);
    transform-origin: left;
  }
  .nav-link-mobile.active,
  .nav-link-mobile:focus,
  .nav-link-mobile:hover {
    color: #0f766e !important;
    background: none;
  }
  .nav-link-mobile:hover::after,
  .nav-link-mobile:focus::after,
  .nav-link-mobile.active::after {
    transform: scaleX(1);
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #10b981 0%, #38bdf8 100%);
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.3s;
    transform-origin: left;
  }
  .nav-link:hover {
    color: #0f766e;
  }
  .nav-link:hover::after {
    transform: scaleX(1);
  }
</style>

