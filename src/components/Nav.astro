<script>
  // @ts-nocheck
  const navToggle = document.getElementById("navToggle");
  const mobileMenu = document.getElementById("mobileMenu");
  const mobileClose = document.getElementById("mobileClose");
  function openMobileMenu() {
    mobileMenu.classList.remove("opacity-0", "pointer-events-none");
    mobileMenu.classList.add("flex");
    document.body.style.overflow = "hidden";
    navToggle.setAttribute("aria-expanded", "true");
  }
  const mobileMenuLinks = document.getElementById("mobileMenuLinks");
  if (mobileMenuLinks) {
    mobileMenuLinks.addEventListener("click", function (e) {
      const target = e.target;
      if (target.tagName === "A" && target.hash) {
        closeMobileMenu();
        // Let the browser handle the anchor navigation
      }
    });
  }
  function closeMobileMenu() {
    mobileMenu.classList.add("opacity-0", "pointer-events-none");
    setTimeout(() => mobileMenu.classList.remove("flex"), 300);
    document.body.style.overflow = "";
    navToggle.setAttribute("aria-expanded", "false");
  }
  if (navToggle && mobileMenu && mobileClose) {
    navToggle.addEventListener("click", () => {
      const expanded = navToggle.getAttribute("aria-expanded") === "true";
      if (expanded) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    });
    mobileClose.addEventListener("click", closeMobileMenu);
  }

  // Theme Toggle Functionality
  function updateThemeIcons(theme) {
    const sunIcons = document.querySelectorAll('.sun-icon');
    const moonIcons = document.querySelectorAll('.moon-icon');
    const themeTextMobile = document.getElementById('themeTextMobile');
    
    if (theme === 'dark') {
      sunIcons.forEach(icon => icon.classList.add('hidden'));
      moonIcons.forEach(icon => icon.classList.remove('hidden'));
      if (themeTextMobile) themeTextMobile.textContent = 'Modo Claro';
    } else {
      sunIcons.forEach(icon => icon.classList.remove('hidden'));
      moonIcons.forEach(icon => icon.classList.add('hidden'));
      if (themeTextMobile) themeTextMobile.textContent = 'Modo Oscuro';
    }
  }

  // Inicializar iconos cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
    updateThemeIcons(currentTheme);
  });

  // Escuchar cambios de tema
  window.addEventListener('themeChanged', (e) => {
    updateThemeIcons(e.detail.theme);
  });

  // Event listeners para los botones de tema
  const themeToggle = document.getElementById('themeToggle');
  const themeToggleMobile = document.getElementById('themeToggleMobile');

  if (themeToggle) {
    themeToggle.addEventListener('click', () => {
      if (window.toggleTheme) {
        window.toggleTheme();
      }
    });
  }

  if (themeToggleMobile) {
    themeToggleMobile.addEventListener('click', () => {
      if (window.toggleTheme) {
        window.toggleTheme();
      }
    });
  }

  // Scroll Blur Effect
  function updateNavbarOnScroll() {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;

    const scrollY = window.scrollY;
    const scrollThreshold = 50; // Punto donde empieza el efecto
    
    if (scrollY > scrollThreshold) {
      // Navegación con blur cuando hay scroll - más translúcida
      navbar.style.backdropFilter = 'blur(25px)';
      navbar.style.webkitBackdropFilter = 'blur(25px)';
      navbar.style.backgroundColor = `rgba(var(--nav-bg-rgb), 0.4)`;
      navbar.style.borderBottomColor = `rgba(var(--border-color-rgb), 0.3)`;
      navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.08)';
    } else {
      // Navegación transparente en la parte superior
      const opacity = scrollY / scrollThreshold;
      navbar.style.backdropFilter = `blur(${opacity * 25}px)`;
      navbar.style.webkitBackdropFilter = `blur(${opacity * 25}px)`;
      navbar.style.backgroundColor = `rgba(var(--nav-bg-rgb), ${opacity * 0.4})`;
      navbar.style.borderBottomColor = `rgba(var(--border-color-rgb), ${opacity * 0.3})`;
      navbar.style.boxShadow = `0 4px 20px rgba(0, 0, 0, ${opacity * 0.08})`;
    }
  }

  // Inicializar el efecto de scroll
  document.addEventListener('DOMContentLoaded', () => {
    updateNavbarOnScroll(); // Aplicar estado inicial
    window.addEventListener('scroll', updateNavbarOnScroll, { passive: true });
  });
</script>
<style>
  @media (max-width: 767px) {
    #desktopMenu {
      display: none !important;
    }
    #mobileMenu {
      display: flex !important;
    }
  }
  .nav-link {
    position: relative;
    transition: color 0.3s;
    overflow: hidden;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--first-color-light, #48e191) 0%,
      var(--first-color, #10b981) 100%
    );
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.35s cubic-bezier(0.4, 1.6, 0.6, 1);
    transform-origin: left;
  }
  .nav-link:hover,
  .nav-link:focus {
    color: #fff;
  }
  .nav-link:hover::after,
  .nav-link:focus::after {
    transform: scaleX(1);
  }
  .nav-link-mobile {
    display: block;
    color: var(--white-pure) !important;
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 0.01em;
    padding: 0.5rem 0;
    border-radius: 0.375rem;
    transition:
      color 0.2s,
      background 0.2s;
    position: relative;
    opacity: 1 !important;
    text-shadow: none !important;
    overflow: hidden;
  }
  .nav-link-mobile::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2.5px;
    background: linear-gradient(
      90deg,
      var(--white-pure) 0%,
      var(--primary-blue-light) 100%
    );
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.35s cubic-bezier(0.4, 1.6, 0.6, 1);
    transform-origin: left;
  }
  .nav-link-mobile.active,
  .nav-link-mobile:focus,
  .nav-link-mobile:hover {
    color: var(--primary-blue-light) !important;
    background: none;
  }
  .nav-link-mobile:hover::after,
  .nav-link-mobile:focus::after,
  .nav-link-mobile.active::after {
    transform: scaleX(1);
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.3s;
    transform-origin: left;
  }
  .nav-link:hover {
    color: var(--primary-blue-dark);
  }
  .nav-link:hover::after {
    transform: scaleX(1);
  }
</style>

