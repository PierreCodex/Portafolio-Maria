---
// Importar imágenes de diplomas
import diploma1 from '../assets/diplo1.jpg';

// Datos de diplomas reales
const diplomas = [
  {
    id: 1,
    title: "Diplomado de Especialización en Residencia y Supervisión de Obras",
    institution: "Universidad Nacional de Piura (UNP)",
    year: "2024-2025",
    description: "Resolución Directorial Virtual N° 079-2023 EPG – UNP. Duración: 420 horas académicas (Oct 2024 - Feb 2025)",
    image: diploma1.src
  },
  {
    id: 2,
    title: "Valorización y Liquidaciones de Obras",
    institution: "TEDI - Colegio de Ingenieros del Perú CD Piura",
    year: "2024",
    description: "Curso especializado en valorización y liquidación de proyectos de construcción. Duración: 43 horas electivas (Abril - Junio 2024)",
    image: diploma1.src // Usando la misma imagen por ahora, puedes agregar más imágenes
  },
  {
    id: 3,
    title: "Programación de Obras con MS Project",
    institution: "Colegio de Ingenieros del Perú CD Piura",
    year: "2024",
    description: "Especialización en planificación y programación de proyectos usando Microsoft Project. Duración: 32 horas electivas (Mayo - Junio 2024)",
    image: diploma1.src // Usando la misma imagen por ahora, puedes agregar más imágenes
  },
  {
    id: 4,
    title: "S10 Costos y Presupuestos",
    institution: "TEDI - Colegio de Ingenieros del Perú CD Piura",
    year: "2024",
    description: "Curso especializado en elaboración de costos y presupuestos con software S10. Duración: 29 horas lectivas (Enero - Febrero 2024)",
    image: diploma1.src // Usando la misma imagen por ahora, puedes agregar más imágenes
  }
];
---

<section id="diplomas" class="section-spacing">
  <div class="content-wrapper">
    <!-- Título de la sección -->
    <div class="section-header">
      <h2 class="section-title">
        <span class="title-accent">Diplomas y</span> Certificaciones
      </h2>
      <p class="section-description">
        Mis logros académicos y certificaciones profesionales que respaldan mi experiencia en ingeniería civil
      </p>
    </div>

    <!-- Grid de diplomas -->
    <div class="diplomas-grid">
      {diplomas.map((diploma) => (
        <div class="diploma-card" data-diploma-id={diploma.id}>
          <div class="diploma-image-container">
            <img 
              src={diploma.image} 
              alt={`Diploma de ${diploma.title}`}
              class="diploma-image"
              loading="lazy"
            />
            <div class="diploma-overlay">
              <div class="diploma-info">
                <h3 class="diploma-title">{diploma.title}</h3>
                <p class="diploma-institution">{diploma.institution}</p>
                <span class="diploma-year">{diploma.year}</span>
              </div>
              <button class="view-diploma-btn" data-diploma-id={diploma.id}>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
                Ver Diploma
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Modal para vista ampliada -->
  <div id="diplomaModal" class="diploma-modal">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <button class="modal-close" id="closeModal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      <div class="modal-body">
        <img id="modalImage" src="" alt="" class="modal-diploma-image" />
        <div class="modal-info">
          <h3 id="modalTitle" class="modal-diploma-title"></h3>
          <p id="modalInstitution" class="modal-diploma-institution"></p>
          <p id="modalDescription" class="modal-diploma-description"></p>
          <span id="modalYear" class="modal-diploma-year"></span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Datos de diplomas para el modal
  const diplomasData = {
      1: {
        title: "Diplomado de Especialización en Residencia y Supervisión de Obras",
        institution: "Universidad Nacional de Piura (UNP)",
        year: "2024-2025",
        image: "${diploma1.src}",
        description: "Resolución Directorial Virtual N° 079-2023 EPG – UNP. Duración: 420 horas académicas (Oct 2024 - Feb 2025)"
      },
      2: {
        title: "Valorización y Liquidaciones de Obras",
        institution: "TEDI - Colegio de Ingenieros del Perú CD Piura",
        year: "2024",
        image: "${diploma1.src}",
        description: "Curso especializado en valorización y liquidación de proyectos de construcción. Duración: 43 horas electivas (Abril - Junio 2024)"
      },
      3: {
        title: "Programación de Obras con MS Project",
        institution: "Colegio de Ingenieros del Perú CD Piura",
        year: "2024",
        image: "${diploma1.src}",
        description: "Especialización en planificación y programación de proyectos usando Microsoft Project. Duración: 32 horas electivas (Mayo - Junio 2024)"
      },
      4: {
        title: "S10 Costos y Presupuestos",
        institution: "TEDI - Colegio de Ingenieros del Perú CD Piura",
        year: "2024",
        image: "${diploma1.src}",
        description: "Curso especializado en elaboración de costos y presupuestos con software S10. Duración: 29 horas lectivas (Enero - Febrero 2024)"
      }
    };

  // Funcionalidad del modal
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('diplomaModal');
    const closeModal = document.getElementById('closeModal');
    const modalBackdrop = document.querySelector('.modal-backdrop');
    const viewButtons = document.querySelectorAll('.view-diploma-btn');

    // Abrir modal
    viewButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.stopPropagation();
        const diplomaId = button.getAttribute('data-diploma-id');
        const diploma = diplomasData[diplomaId];
        
        if (diploma) {
          document.getElementById('modalImage').src = diploma.image;
          document.getElementById('modalImage').alt = `Diploma de ${diploma.title}`;
          document.getElementById('modalTitle').textContent = diploma.title;
          document.getElementById('modalInstitution').textContent = diploma.institution;
          document.getElementById('modalDescription').textContent = diploma.description;
          document.getElementById('modalYear').textContent = diploma.year;
          
          modal.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Cerrar modal
    const closeModalFunction = () => {
      modal.classList.remove('active');
      document.body.style.overflow = 'auto';
    };

    closeModal.addEventListener('click', closeModalFunction);
    modalBackdrop.addEventListener('click', closeModalFunction);

    // Cerrar con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('active')) {
        closeModalFunction();
      }
    });
  });
</script>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--title-color);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .title-accent {
    color: var(--primary-blue);
  }

  .section-description {
    font-size: 1.1rem;
    color: var(--text-color);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Grid de diplomas */
  .diplomas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .diploma-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: var(--card-bg);
    box-shadow: 0 4px 20px var(--shadow-color);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .diploma-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px var(--shadow-color);
  }

  .diploma-image-container {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
  }

  .diploma-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .diploma-card:hover .diploma-image {
    transform: scale(1.05);
  }

  /* Overlay con información */
  .diploma-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.8) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .diploma-card:hover .diploma-overlay {
    opacity: 1;
  }

  .diploma-info {
    color: white;
    margin-bottom: 1rem;
  }

  .diploma-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .diploma-institution {
    font-size: 1rem;
    opacity: 0.9;
    margin-bottom: 0.25rem;
  }

  .diploma-year {
    font-size: 0.9rem;
    opacity: 0.8;
    font-weight: 500;
  }

  .view-diploma-btn {
    background: var(--primary-blue);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    align-self: flex-start;
  }

  .view-diploma-btn:hover {
    background: var(--primary-blue-dark);
    transform: translateY(-2px);
  }

  /* Modal */
  .diploma-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .diploma-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
  }

  .modal-content {
    position: relative;
    background: var(--card-bg);
    border-radius: 16px;
    max-width: 90vw;
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .diploma-modal.active .modal-content {
    transform: scale(1);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: background 0.3s ease;
  }

  .modal-close:hover {
    background: rgba(0, 0, 0, 0.7);
  }

  .modal-body {
    display: flex;
    flex-direction: column;
  }

  .modal-diploma-image {
    width: 100%;
    max-height: 60vh;
    object-fit: contain;
    background: #f8f9fa;
  }

  .modal-info {
    padding: 2rem;
  }

  .modal-diploma-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--title-color);
    margin-bottom: 0.5rem;
  }

  .modal-diploma-institution {
    font-size: 1.1rem;
    color: var(--primary-blue);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .modal-diploma-description {
    font-size: 1rem;
    color: var(--text-color);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .modal-diploma-year {
    font-size: 0.9rem;
    color: var(--text-color-light);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .diplomas-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .diploma-image-container {
      height: 240px;
    }

    .section-title {
      font-size: 2rem;
    }

    .modal-body {
      flex-direction: column;
    }

    .modal-diploma-image {
      max-height: 50vh;
    }

    .modal-info {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .diplomas-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .diploma-overlay {
      padding: 1.5rem;
    }

    .diploma-title {
      font-size: 1.2rem;
    }
  }
</style>